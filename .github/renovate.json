{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "ignorePresets": [":prHourlyLimit2"],
  "labels": [
    "dependencies",
    "{{datasource}}",
    "{{updateType}}"
  ],
  "regexManagers": [
    {
      "fileMatch": ["Dockerfile"],
      "matchStrings": ["node:(?<currentValue>.+)-alpine"],
      "depNameTemplate": "node",
      "datasourceTemplate": "node",
      "versioningTemplate": "node"
    },
    {
      "fileMatch": ["Dockerfile", "^\\.github/workflows/"],
      "matchStrings": [
        "\\s*NIGHTSCOUT_REPO: +(?<depName>.+)\\n\\s*NIGHTSCOUT_REF: +(?<currentValue>.+)",
        "ARG +NIGHTSCOUT_REPO=(?<depName>.+)\\nARG +NIGHTSCOUT_REF=(?<currentValue>.+)"
      ],
      "datasourceTemplate": "github-releases"
    }
  ],
  "commitMessagePrefix": ":arrow_up:",
  "packageRules": [
    {
      "matchUpdateTypes": ["lockFileMaintenance", "pin"],
      "commitMessagePrefix": ":pushpin:"
    },
    {
      "matchUpdateTypes": ["rollback"],
      "commitMessagePrefix": ":arrow_down:"
    },
    {
      "matchManagers": ["dockerfile"],
      "matchPackageNames": ["node"],
      "enabled": false
    },
    {
      "matchManagers": ["github-actions"],
      "automerge": true
    }
  ]
}
